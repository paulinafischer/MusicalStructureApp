<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HeavyMetalActivity"
            android:label="@string/category_heavy_metal" />
        <activity android:name=".BlackMetalActivity"
            android:label="@string/category_black_metal"/>
        <activity android:name=".DeathMetalActivity"
            android:label="@string/category_death_metal"></activity>
    </application>

</manifest>